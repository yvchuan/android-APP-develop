<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/anhui_bg"
    tools:context=".ui.activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_above="@+id/login_username"
        android:layout_marginBottom="60dp"
        android:src="@drawable/anhui_library1" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/reg"
        android:hint="请输入您的用户名"
        android:text="" />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_username"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/reg"
        android:hint="请输入您的密码"
        android:inputType="textPassword"
        android:text="" />

    <LinearLayout
        android:id="@+id/login_box"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_pwd"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_box1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_gravity="center"
            android:text="记住密码"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/login_box2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_gravity="center"
            android:text="自动登录"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_bnt"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/login_box"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bnt"
        android:text="登录" />

    <LinearLayout
        android:id="@+id/ll_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_bnt"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-9dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_bnt"
            android:layout_marginTop="20dp"
            android:text="没有用户点击去注册"
            android:textColor="#00574B"
            android:textSize="15dp"
            android:textStyle="italic"
            android:theme="@style/MyEditText" />

        <View
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="#333333" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_reg"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-9dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_reg"
            android:layout_marginTop="20dp"
            android:text="工作人员登录"
            android:textColor="#00574B"
            android:textSize="15dp"
            android:textStyle="italic"
            android:theme="@style/MyEditText" />

        <!--        <View-->
        <!--            android:layout_width="140dp"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:layout_marginTop="1dp"-->
        <!--            android:background="#333333"/>-->
    </LinearLayout>

</RelativeLayout>